<div class="home-form-container">
  <ul>
    <li class="selected"><a href="#" class="signup-tab">Sign up</a></li>
    <li><a href="#" class="login-tab">Log in</a></li>
  </ul>
  <div class="signup">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="login">
    <%= form_for :session, url: login_path do |f| %>
      <h3>Log in</h3>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
