<div class="activities">
  <% @activities.each do |activity| %>
    <div class="activity">
      <h2><%= activity.title %></h2>
      <p><%= activity.description %></p>
      <%= render "calendar", activity: activity %>
      <%= form_for @entry, url: activity_entries_path(activity) do |f| %>
        <% f.text_field :comment, placeholder: "What did you do today?" %>
      <% end %>
    </div>
  <% end %>
</div>
